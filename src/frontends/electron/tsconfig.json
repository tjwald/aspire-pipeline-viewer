{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "types": ["node"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "../../../dist-electron",
    "rootDir": "./"
  },
  "include": ["main.ts", "preload.ts"],
  "exclude": ["renderer", "../../../dist-electron"]
}
