{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "types": ["node"],
    "outDir": "dist",
    "rootDir": "./",
    "noEmit": false,
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false
  },
  "references": [
    { "path": "../../core" }
  ],
  "include": ["./**/*"],
  "exclude": ["dist"]
}
