{
  "name": "aspire-pipeline-visualizer",
  "version": "0.1.0",
  "private": true,
  "description": "Visual DAG viewer for Aspire pipelines",
  "type": "module",
  "workspaces": [
    "src/core",
    "src/frontends/*"
  ],
  "main": "dist-electron/main.cjs",
  "scripts": {
    "build": "pnpm -r run build",
    "dev:app": "pnpm --filter @aspire-pipeline-viewer/electron dev",
    "clean": "rimraf node_modules dist dist-electron .pnpm-store playwright-report test-results || true",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "test": "pnpm -w -r test",
    "test:unit": "vitest run",
    "cli": "pnpm --filter @aspire-pipeline-viewer/cli dev"
  },
  "dependencies": {
    "@aspire-pipeline-viewer/core": "workspace:*",
    "electron": "^39.2.7",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "reactflow": "^11.11.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "jsdom": "^27.3.0",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "rimraf": "^5.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "wait-on": "^9.0.3"
  }
}
