{
  "name": "aspire-pipeline-visualizer",
  "version": "0.1.0",
  "private": true,
  "description": "Visual DAG viewer for Aspire pipelines",
  "type": "module",
  "workspaces": [
    "src/core",
    "src/frontends/*"
  ],
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev:renderer": "vite --config src/frontends/electron/vite.config.ts",
    "install:pnpm": "pnpm -w install",
    "build:all": "pnpm -w -r run build",
    "test:all": "pnpm -w -r test",
    "dev:electron": "electron .",
    "build:electron": "pnpm tsc -p src/frontends/electron/tsconfig.json && node -e \"const fs=require('fs'); fs.renameSync('dist-electron/main.js','dist-electron/main.cjs'); fs.renameSync('dist-electron/preload.js','dist-electron/preload.cjs');\"",
    "build:renderer": "vite build --config src/frontends/electron/vite.config.ts",
    "build:app": "pnpm --filter @aspire/core build && pnpm build:renderer && pnpm build:electron",
    "dev:app": "concurrently \"pnpm dev:renderer\" \"wait-on http://localhost:5174 && pnpm build:electron && electron .\"",
    "clean": "rimraf node_modules dist dist-electron .pnpm-store playwright-report test-results || true",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:e2e-cli:only": "vitest run --config vitest.e2e.config.ts tests/frontends/cli/e2e",
    "test:e2e-cli": "pnpm build:all && pnpm run test:e2e-cli:only",
    "test:e2e-electron:only": "playwright test --reporter=list",
    "test:e2e-electron": "pnpm build:app && pnpm run test:e2e-electron:only",
    "test:e2e-electron:ui": "pnpm build:app && playwright test --ui",
    "test:e2e-electron:debug": "pnpm build:app && playwright test --debug",
    "cli": "node src/frontends/cli/dist/index.js"
  },
  "dependencies": {
    "@aspire/core": "workspace:*",
    "electron": "^39.2.7",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "reactflow": "^11.11.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "jsdom": "^27.3.0",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "rimraf": "^5.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "wait-on": "^9.0.3"
  }
}
