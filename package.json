{
  "name": "aspire-pipeline-visualizer",
  "version": "0.1.0",
  "private": true,
  "description": "Visual DAG viewer for .NET Aspire pipelines",
  "type": "module",
  "workspaces": [
    "packages/*",
    "electron"
  ],
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "install:pnpm": "pnpm -w install",
    "build:all": "pnpm -w -r run build",
    "test:all": "pnpm -w -r test",
    "dev:electron": "electron .",
    "dev:all": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build && tsc -p electron/tsconfig.json",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "vitest"
  },
  "dependencies": {
    "@aspire/core": "workspace:*",
    "electron": "^39.2.7",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "reactflow": "^11.11.4"
  },
  "devDependencies": {
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react": "^7.37.5",
    "jsdom": "^27.3.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vitest": "^1.6.1",
    "wait-on": "^8.0.5"
  }
}
